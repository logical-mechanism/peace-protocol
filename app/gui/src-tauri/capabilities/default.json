{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-set-title",
    "shell:allow-kill",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        { "name": "binaries/cardano-node", "sidecar": true },
        { "name": "binaries/ogmios", "sidecar": true },
        { "name": "binaries/kupo", "sidecar": true },
        { "name": "binaries/mithril-client", "sidecar": true },
        { "name": "binaries/snark", "sidecar": true }
      ]
    }
  ]
}
