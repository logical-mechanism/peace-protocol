# Copy this file to .env.development or .env.production and fill in the values

# Use stub data instead of real blockchain queries
VITE_USE_STUBS=true

# Backend API URL
VITE_API_URL=http://localhost:3001

# Blockfrost API keys (get from https://blockfrost.io)
VITE_BLOCKFROST_PROJECT_ID_PREPROD=
VITE_BLOCKFROST_PROJECT_ID_MAINNET=

# Sentry DSN for error monitoring (optional)
VITE_SENTRY_DSN=

# SNARK files CDN URL (leave empty to use local /snark/ path)
VITE_SNARK_CDN_URL=
